{
  "name": "js-codemod",
  "author": "Christoph Pojer",
  "version": "1.0.0",
  "description": "Codemod scripts to transform code to next generation JS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cpojer/js-codemod.git"
  },
  "scripts": {
    "build": "rm -rf build; jsx --harmony transforms/ build/",
    "watch": "jsx transforms/ build/ -w",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "bin": {
    "jscodeshift": "./bin/jscodeshift.sh"
  },
  "keywords": [
    "codemod",
    "recast"
  ],
  "dependencies": {
    "jscodeshift": "git+ssh://git@github.com:facebook/jscodeshift.git"
  },
  "devDependencies": {
    "jest-cli": "^0.4.0",
    "react-tools": "^0.13.1"
  },
  "jest": {
    "scriptPreprocessor": "./scripts/test-preprocess.js",
    "testPathDirs": ["test"]
  }
}
